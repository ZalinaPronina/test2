<div data-component="Address" data-address-id="{{ address.id }}">
  <div class="sm:flex sm-down:space-y-8">
    <div class="shrink-0 w-full sm:max-w-[160px]">
      <div>{{ address.name }}</div>

      {% if default %}
        <span class="text-12 font-semibold text-brand-tertiary-500">{{ "customer.addresses.default" | t }}</span>
      {% endif %}
    </div>

    <div class="sm:w-1/3">
      {{ address.street }}
    </div>

    <div class="sm:w-1/3">
      <p>{{ address.zip }}</p>
      <p>{{ address.city }}{% if address.province %}, {{ address.province }}{% endif %}</p>
      <p>{{ address.country }}</p>
    </div>

    <div class="flex items-center justify-between sm:w-1/3 sm:flex-col sm:items-end sm:space-y-3">
      <button class="px-0" data-modal-trigger="address-{{ address.id }}">
        <span class="mr-1">{{ "customer.addresses.edit" | t }}</span>
        {% render "icons", icon: "edit" %}
      </button>

      <button class="px-0" type="button" data-remove>
        <span class="mr-1">{{ "customer.addresses.remove" | t }}</span>
        {% render "icons", icon: "close" %}
      </button>
    </div>
  </div>
</div>
