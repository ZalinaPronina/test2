<div class="Social">
  <a class="Social__Item" target="_blank" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}">
    Facebook
  </a>

  <a class="Social__Item" target="_blank" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}">
    Twitter
  </a>

  <a class="Social__Item" target="_blank" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | image_url: width: 1024 }}&amp;description={{ share_title | url_param_escape }}">
    Pinterest
  </a>
</div>
