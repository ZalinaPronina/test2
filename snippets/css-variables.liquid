{%- liquid
  assign body_font_medium = settings.type_body_font | font_modify: 'weight', '500'
  assign body_font_semibold = settings.type_body_font | font_modify: 'weight', '600'
  assign body_font_bold = settings.type_body_font | font_modify: 'weight', '700'
  assign body_font_italic = settings.type_body_font | font_modify: 'style', 'italic'
%}

<style>
  {{ settings.type_body_font | font_face: font_display: 'swap' }}
  {{ body_font_medium | font_face: font_display: 'swap' }}
  {{ body_font_semibold | font_face: font_display: 'swap' }}
  {{ body_font_bold | font_face: font_display: 'swap' }}
  {{ body_font_italic | font_face: font_display: 'swap' }}

  :root {
    --color-text-body: {{ settings.color_text_body | default: "#000" | color_extract: 'red' }} {{ settings.color_text_body | default: "#000" | color_extract: 'green' }} {{ settings.color_text_body | default: "#000" | color_extract: 'blue' }};
    --color-background-body: {{ settings.color_background_body | default: "#fff" | color_extract: 'red' }} {{ settings.color_background_body | default: "#fff" | color_extract: 'green' }} {{ settings.color_background_body | default: "#fff" | color_extract: 'blue' }};
    --background-btn: {{ settings.background_btn }};
    --color-btn: {{ settings.color_btn }};
    --background-btn-redesign: {{ settings.background_btn_redesign }};
    --color-btn-redesign: {{ settings.color_btn_redesign }};
    --font-size-base: {{ settings.font_size_base | default: "1rem" }};
    --font-body-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    --font-heading-family: "Anton", {{ settings.type_body_font.fallback_families }};
  }
</style>
