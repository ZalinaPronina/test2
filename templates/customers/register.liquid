<div class="max-w-sm mx-auto px-5">
  <div class="flex flex-col items-center justify-center py-20">
    <div class="w-full">
      <h1 class="text-30 font-bold uppercase mb-6">{{ "customer.register.title" | t }}</h1>

      {% form "create_customer" %}
        <div class="mb-4 empty:mb-0">{{ form.errors | default_errors }}</div>

        {% assign first_name_label = "customer.register.first_name" | t %}
        {%
          render "component-input",
          placeholder: first_name_label,
          name: "customer[first_name]",
          value: form.first_name,
          type: "text",
          className: "mb-4"
        %}

        {% assign last_name_label = "customer.register.last_name" | t %}
        {%
          render "component-input",
          placeholder: last_name_label,
          name: "customer[last_name]",
          type: "text",
          className: "mb-4"
        %}

        {% assign email_label = "customer.register.email" | t %}
        {%
          render "component-input",
          placeholder: email_label,
          name: "customer[email]",
          type: "email",
          value: form.email,
          spellcheck: "off",
          autocapitalize: "off",
          className: "mb-4"
        %}

        {% assign password_label = "customer.register.password" | t %}
        {%
          render "component-input",
          placeholder: password_label,
          name: "customer[password]",
          type: "password",
          className: "mb-4"
        %}

        <div class="mt-8">
          {% assign submit_label = "customer.register.submit" | t %}
          {%
            render "component-button",
            tag: "button",
            type: "submit",
            cta: submit_label,
            className: "Button Button--primary"
          %}
        </div>
      {% endform %}
    </div>
  </div>
</div>
